.contents__message__box
  .contents__message__box__upper
    .contents__message__box__upper__name
      = message.user.name
    .contents__message__box__upper__daily
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .contents__message__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

